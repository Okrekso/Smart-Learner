<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_InLogInPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="40dp"
            android:paddingTop="70dp"
            app:srcCompat="@drawable/logopit" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorText_InLogInPage"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorText_InLogInPage"
            android:ems="10"
            android:background="@color/colorBackgroundTextView_InLogInPage"
            android:hint="@string/textview_login"
            android:textColorHint="@color/colorText_InLogInPage"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@color/colorBackgroundTextView_InLogInPage"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText_InLogInPage"
            android:hint="@string/textview_password"
            android:textColorHint="@color/colorText_InLogInPage"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="80sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:background="@color/colorBtn_InLogInPage"
            android:textColor="@color/colorText_InLogInPage"
            android:text="@string/btn_text" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>